@{
    ViewData["Title"] = "Evcil Hayvan Kategorileri";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - EvcilDostum</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .category-card {
            transition: all 0.3s ease;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            height: 100%;
        }

            .category-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

            .category-card img {
                height: 200px;
                object-fit: cover;
                width: 100%;
            }

        .subcategories {
            margin-top: 15px;
        }

            .subcategories .badge {
                margin-right: 5px;
                margin-bottom: 5px;
                padding: 8px 12px;
                font-size: 14px;
                font-weight: normal;
                background-color: #17a2b8;
            }

        .filter-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .hero-section {
            background-color: #f8f9fa;
            padding: 60px 0;
            text-align: center;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <h1 class="display-4">Evcil Hayvan Kategorileri</h1>
                    <p class="lead">Aradığınız tüm evcil hayvan türlerini burada bulabilirsiniz</p>
                </div>
            </section>

            <div class="container">
                <!-- Filtreleme Kartı -->
                <div class="filter-card">
                    <h5 class="mb-4"><i class="fas fa-filter"></i> Filtrele</h5>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Hayvan Türü</label>
                            <select class="form-select">
                                <option selected>Tümü</option>
                                <option>Kedi</option>
                                <option>Köpek</option>
                                <option>Kuş</option>
                                <option>Balık</option>
                                <option>Besi Hayvanı</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Yaş</label>
                            <select class="form-select">
                                <option selected>Tümü</option>
                                <option>Yavru</option>
                                <option>Genç</option>
                                <option>Yetişkin</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Cinsiyet</label>
                            <select class="form-select">
                                <option selected>Tümü</option>
                                <option>Erkek</option>
                                <option>Dişi</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Fiyat Aralığı</label>
                            <select class="form-select">
                                <option selected>Tümü</option>
                                <option>0-500 TL</option>
                                <option>500-2000 TL</option>
                                <option>2000+ TL</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Kategoriler Grid -->
                <div class="row">
                    <!-- Kedi Kategorisi -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2017/07/25/01/22/cat-2536662_640.jpg" class="card-img-top" alt="Kediler">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-cat"></i> Kediler</h5>
                                <p class="card-text">Farklı cinslerde kediler ve sahiplendirme ilanları</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">British Shorthair</a>
                                    <a href="#" class="badge">Scottish Fold</a>
                                    <a href="#" class="badge">Van Kedisi</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Köpek Kategorisi -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2016/12/13/05/15/puppy-1903313_640.jpg" class="card-img-top" alt="Köpekler">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-dog"></i> Köpekler</h5>
                                <p class="card-text">Çeşitli ırklarda köpekler ve sahiplendirme ilanları</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">Golden Retriever</a>
                                    <a href="#" class="badge">Beagle</a>
                                    <a href="#" class="badge">Sokak Köpeği</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Kuş Kategorisi -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2018/08/12/16/59/parrot-3601194_640.jpg" class="card-img-top" alt="Kuşlar">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-dove"></i> Kuşlar</h5>
                                <p class="card-text">Renkli kuşlar ve bakım ürünleri</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">Muhabbet Kuşu</a>
                                    <a href="#" class="badge">Kanarya</a>
                                    <a href="#" class="badge">Papağan</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Balık Kategorisi -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2016/12/31/21/22/aquarium-1943755_640.jpg" class="card-img-top" alt="Balıklar">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-fish"></i> Balıklar</h5>
                                <p class="card-text">Akvaryum balıkları ve ekipmanları</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">Japon Balığı</a>
                                    <a href="#" class="badge">Beta</a>
                                    <a href="#" class="badge">Tetra</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Kemirgenler -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2017/04/11/21/34/golden-hamster-2222628_640.jpg" class="card-img-top" alt="Kemirgenler">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-paw"></i> Kemirgenler</h5>
                                <p class="card-text">Hamster, tavşan ve diğer küçük dostlar</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">Hamster</a>
                                    <a href="#" class="badge">Tavşan</a>
                                    <a href="#" class="badge">Guinea Pig</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Besi Hayvanları -->
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card">
                            <img src="https://cdn.pixabay.com/photo/2016/11/20/11/38/cow-1842974_640.jpg" class="card-img-top" alt="Besi Hayvanları">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-horse"></i> Besi Hayvanları</h5>
                                <p class="card-text">Çiftlik ve besi hayvanları</p>
                                <div class="subcategories">
                                    <a href="#" class="badge">Sığır</a>
                                    <a href="#" class="badge">Koyun</a>
                                    <a href="#" class="badge">Keçi</a>
                                    <a href="#" class="badge">Tümünü Gör</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>