@model List<CartItem>

<h2>Sepetiniz</h2>

@if (!Model.Any())
{
    <p>Sepetiniz boş.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Birim Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price ₺</td>
                    <td>@(item.Quantity * item.Product.Price) ₺</td>
                </tr>
            }
        </tbody>
    </table>
}
