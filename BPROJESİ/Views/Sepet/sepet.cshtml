@model BPROJESİ.Models.CartViewModel

@{
    ViewData["Title"] = "Sepet";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sepetiniz</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Seç</th>
                                    <th>Resim</th>
                                    <th>Ürün</th>
                                    <th>Fiyat</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedItemIds" value="@item.Id" checked />
                                        </td>
                                        <td>
                                            <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 80px; height: 80px; object-fit: cover;" />
                                        </td>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Product.Price TL</td>
                                        <td>
                                            <form asp-action="RemoveFromCart" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-right mt-3">
                            <h4>Toplam: <span class="text-primary">@Model.TotalPrice TL</span></h4>
                            <button type="submit" class="btn btn-success">Ödemeye Geç</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center">
                    <h4>Sepetiniz boş.</h4>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Alışverişe Devam Et</a>
                </div>
            </div>
        }
    </div>
</section>
