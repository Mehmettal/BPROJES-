@{
    Layout = null; // Kendi layout'un varsa ekleyebilirsin
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş & Kayıt - HAYTİC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #e6f2e6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 128, 0, 0.3);
            max-width: 450px;
            width: 100%;
            background: #fff;
            padding: 2rem;
        }

        h2 {
            color: #2c662d;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #2c662d;
            border-color: #2c662d;
        }

            .btn-primary:hover {
                background-color: #255522;
                border-color: #255522;
            }

        .btn-link {
            color: #2c662d;
            cursor: pointer;
        }

            .btn-link:hover {
                color: #1b3d17;
                text-decoration: underline;
            }

        .form-label {
            font-weight: 600;
            color: #2c662d;
        }

        .toggle-link {
            margin-top: 1rem;
            text-align: center;
        }

        .error-message {
            color: #cc0000;
            font-weight: 600;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="card">

        <!-- Giriş Formu -->
        <div id="loginForm">
            <h2>Giriş Yap</h2>

            @if (!ViewData.ModelState.IsValid && ViewData["Form"]?.ToString() == "Login")
            {
                <div class="error-message">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            <form id="loginFormAjax">
                <div class="mb-3">
                    <label for="username" class="form-label">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="loginUsername" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="loginPassword" required />
                </div>
                <div id="loginErrors" class="error-message"></div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>

            <div class="toggle-link">
                Henüz üye değil misin? <span class="btn-link" onclick="toggleForms()">Kayıt Ol</span>
            </div>
        </div>

        <!-- Kayıt Formu -->
        <div id="registerForm" style="display:none;">
            <h2>Kayıt Ol</h2>

            <div id="registerErrors" class="error-message" style="display:none;"></div>

            <form id="registerFormAjax">
                <div class="mb-3">
                    <label for="firstName" class="form-label">İsim</label>
                    <input type="text" class="form-control" id="firstName" required />
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Soyisim</label>
                    <input type="text" class="form-control" id="lastName" required />
                </div>
                <div class="mb-3">
                    <label for="regUsername" class="form-label">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="regUsername" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta</label>
                    <input type="email" class="form-control" id="email" required />
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Telefon</label>
                    <input type="tel" class="form-control" id="phone" />
                </div>
                <div class="mb-3">
                    <label for="birthDate" class="form-label">Doğum Tarihi</label>
                    <input type="date" class="form-control" id="birthDate" />
                </div>
                <div class="mb-3">
                    <label for="regPassword" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="regPassword" required />
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                    <input type="password" class="form-control" id="confirmPassword" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            </form>

            <div class="toggle-link">
                Zaten üye misin? <span class="btn-link" onclick="toggleForms()">Giriş Yap</span>
            </div>
        </div>

    </div>

    <script>
        function toggleForms() {
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            if (loginForm.style.display === 'none') {
                loginForm.style.display = 'block';
                registerForm.style.display = 'none';
            } else {
                loginForm.style.display = 'none';
                registerForm.style.display = 'block';
            }
        }
    </script>
    <script>
        document.getElementById("registerFormAjax").addEventListener("submit", function (e) {
            e.preventDefault();

            const errorDiv = document.getElementById("registerErrors");
            errorDiv.innerHTML = "";
            errorDiv.style.display = "none";

            const password = document.getElementById("regPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                errorDiv.innerHTML = "Şifreler uyuşmuyor.";
                errorDiv.style.display = "block";
                return;
            }

            const formData = {
                FirstName: document.getElementById("firstName").value,
                LastName: document.getElementById("lastName").value,
                UserName: document.getElementById("regUsername").value,
                Email: document.getElementById("email").value,
                PhoneNumber: document.getElementById("phone").value,
                BirthDate: document.getElementById("birthDate").value,
                Password: password,
                ConfirmPassword: confirmPassword
            };

            fetch("/Home/Register", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(formData)
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    window.location.href = data.redirectUrl;
                } else {
                    errorDiv.innerHTML = data.errors.join("<br>");
                    errorDiv.style.display = "block";
                }
            })
            .catch(err => {
                errorDiv.innerHTML = "Beklenmeyen bir hata oluştu.";
                errorDiv.style.display = "block";
                console.error("Kayıt hatası:", err);
            });
        });
    </script>
    <script>
        document.getElementById("loginFormAjax").addEventListener("submit", function (e) {
            e.preventDefault();

            const username = document.getElementById("loginUsername").value;
            const password = document.getElementById("loginPassword").value;

            fetch("/Home/Login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ UserName: username, Password: password })
            })
            .then(response => {
                if (!response.ok) return response.json().then(err => Promise.reject(err));
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    window.location.href = data.redirectUrl;
                }
            })
            .catch(error => {
                const errorDiv = document.getElementById("loginErrors");
                errorDiv.innerHTML = "";
                if (error.errors) {
                    error.errors.forEach(err => {
                        errorDiv.innerHTML += `<p>${err}</p>`;
                    });
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
